.model-card
  position relative
  width 335px
  height 455px
  .popularity
    position absolute
    left 14px
    top 17px
    background-color transparent
    line-height 33px
    color #fff
    font-size 24px
    display flex
    align-items center
    text:first-child
      margin-right 10px
    image
      width 30px
      height 30px
      margin-right 11px
  .img
    width 100%
    height 100%
    border-radius 20px
    background-size cover
    background-repeat no-repeat
    image
      width 100%
      height 100%
      border-radius 20px
  .info
    position absolute
    bottom -27px
    left 50%
    width 260px
    transform translateX(-50%)
    background-color #fff
    line-height 55px
    border-radius 10px
    box-shadow 1px 0px 13px rgba(14,5,10,0.12)
    display flex
    justify-content center
    text:not(:last-child)
      margin-right 17px
    text:not(:first-child)
      color #AEAEAE
      font-size 20px
    text
      color #000
      font-size 26px
