$marginHorizontal = 24px
.self-info
  image
    background-color #e5e5e5
  .wrapper
    background rgba(255,255,255,1)
    border-radius 8px
    box-shadow 0px 0px 16px rgba(0,0,0,0.09)
    padding 32px 35px
    margin 0 $marginHorizontal 0 $marginHorizontal
    .header
      margin-bottom 50px
      display flex
      align-items center
      font-size 36px
      color #000
      image
        margin-right 23px
        width 35px
        height 35px
  .basic
    margin-top 276px
    .first
      display flex
      justify-content space-around
      font-size 26px
      color #383838
      >view
        display flex
        flex-direction column
        justify-content center
        align-items center
        image
          margin-bottom 20px
    .middle-line
      width 634px
      height 1px
      background rgba(238,238,238,1)
      margin 35px 0 38px 0
    .second
      display flex
      align-items center
      justify-content space-between
      margin 0 35px
      .item
        font-size 24px
        color #383838
        display flex
        align-items center
        image
          background-color #e5e5e5
          margin-right 10px
        .location
          width 18px
          height 22px
        .degree
          width 39px
          height 24px
        .job
          width 22px
          height 21px
      .divider-line
        width 2px
        height 19px
        background rgba(49,49,49,1)
  .specialities
    margin-top 68px
    .inner-wrapper
      display flex
      flex-flow row wrap
      .speciality
        background-color #FFB848
        border-radius 20px
        padding 7px 20px
        color #fff
        font-size 26px
        margin-right 35px
        margin-bottom 35px
  .video
    margin-top 68px
    .inner-wrapper
      video
        width 100%
        height 332px
  .exp
    margin-top 68px
    margin-bottom 181px

