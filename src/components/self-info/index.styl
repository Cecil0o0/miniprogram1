$marginHorizontal = 24px
.self-info
  .wrapper
    background rgba(255,255,255,1)
    border-radius 8px
    box-shadow 0px 0px 16px rgba(0,0,0,0.09)
    padding 32px 35px
    margin 0 $marginHorizontal 0 $marginHorizontal
    >.header
      margin-bottom 50px
      display flex
      align-items center
      font-size 36px
      color #000
      image
        margin-right 23px
        width 35px
        height 35px
  .basic
    margin-top 276px
    .first
      display flex
      justify-content space-around
      font-size 26px
      color #383838
      >view
        display flex
        flex-direction column
        justify-content center
        align-items center
        image
          margin-bottom 20px
    .middle-line
      width 634px
      height 1px
      background rgba(238,238,238,1)
      margin 35px 0 38px 0
    .second
      display flex
      align-items center
      justify-content space-between
      margin 0 35px
      .item
        font-size 24px
        color #383838
        display flex
        align-items center
        image
          margin-right 10px
          width 64px
          height 62px
        .location
          width 18px
          height 22px
        .degree
          width 39px
          height 24px
        .job
          width 22px
          height 21px
      .divider-line
        width 2px
        height 19px
        background rgba(49,49,49,1)
  .specialities
    margin-top 68px
    .inner-wrapper
      display flex
      flex-flow row wrap
      .speciality
        background-color #FFB848
        border-radius 20px
        padding 7px 20px
        color #fff
        font-size 26px
        margin-right 35px
        margin-bottom 35px
  .video
    margin-top 68px
    .inner-wrapper
      video
        width 100%
        height 332px
  .exp
    margin-top 68px
    margin-bottom 181px
    .accordion-item
      display flex
      padding-bottom 35px
      padding-top 30px
      border-bottom 1px dashed #EEEEEE
      .icon
        width 58px
        image
          width 38px
          height 33px
          margin-top 13px
      >.content
        flex 1
        .header
          font-size 38px
          color #499FFF
          display flex
          align-items center
          justify-content space-between
          margin-bottom 0
          .caret
            height 26px
            width 15px
            margin-right 15px
        .body
          display none
    .accordion-item:first-child
      padding-top 0
    .accordion-item.active
      >.content
        .header
          margin-bottom 32px
        .body
          display block
        .caret
          transform rotate(90deg)
    .other-title
      margin-top 30px
      color #101010
      font-size 32px
      margin-bottom 20px
    .other
      font-size 24px
      color #3E3E3E
