.self-center
  .header
    height 559px
    background-size cover
    overflow hidden
    display flex
    align-items center
    flex-direction column
    .avatar
      width 183px
      height 183px
      border-radius 50%
      background-size 100% 100%
      margin-bottom 33px
      margin-top 46px
    .first
      align-self flex-start
      position relative
      left 312px
      color #fff
      display flex
      align-items center
      text:nth-child(1)
        font-size 42px
        line-height 44px
      .sex
        width 30px
        height 30px
        margin 0 14px 0 18px
      .idVerify
        font-size 20px
        display flex
        align-items center
        image
          width 22px
          height 22px
          margin-right 5px
    .btn-group
      color #fff
      font-size 24px
      border-radius 22px
      box-shadow 0px 0px 18px rgba(255,0,0,0.34)
      background-color #FF4545
      display flex
      align-items center
      width 363px
      margin 20px 0 25px 0
      .divider-vertical
        width 2px
        height 22px
        background rgba(255,255,255,1)
        opacity 0.5
      .btn
        line-height 44px
        width 150px
        justify-content center
        display flex
        align-items center
        .icon
          margin-right 6px
          width 22px
          height 22px
      .btn:last-child
        flex 1
    .second
      display flex
      align-items center
      color #fff
      font-size 28px
      .popularity
      .sponsor-value
        display flex
        align-items center
      .popularity
        image
          width 30px
          height 30px
          margin-bottom 2px
          margin-right 4px
      .sponsor-value
        image
          width 30px
          height 30px
          margin-bottom 2px
          margin-right 4px
      .divider
        height 40px
        width 2px
        margin 0 19px
        background-color #fff
    .intro
      margin 20px 80px 48px 80px
      font-size 22px
      line-height 37px
      color #fff
      text-align center
  .body
    display flex
    flex-flow row wrap
    .item:nth-child(3n-2)
    .item:nth-child(3n-1)
      border-right 1px solid #E5E5E5
    .item
      width 33.3333333333%
      height 157px
      display flex
      flex-direction column
      justify-content center
      align-items center
      font-size 28px
      color #2F2F2F
      border-bottom 1px solid #e5e5e5
      image
        width 54px
        height 54px
        margin-bottom 20px
