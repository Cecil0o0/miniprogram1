.view-poster
  display flex
  flex-direction column
  align-items center
  .img
    height 100vh
    width 100%
    margin-bottom 71px
    background-size cover
  .btn-wrapper
    position absolute
    bottom 207px
    left 50%
    transform translate(-50%)
    .upload-btn,
    .confirm-btn
      width 543px
      height 86px
      line-height 86px
      font-size 30px
      text-align center
      border-radius 4px
    .upload-btn
      margin-bottom 15px
      background-color #4978FF
      color #fff
    .confirm-btn
      border 1px solid #DDDDDD
      color #626262
      background-color #fff
