.index
  padding 16px 30px
  .search_input
    height 80px
    background-color #EEEEEE
    display flex
    justify-content flex-start
    align-items center
    border-radius 40px
    padding 0 38px
    margin-bottom 16px
    text
      color #000
      font-size 26px
      margin-left 20px
  .swiper
    swiper-item
      view
        height 100%
        background-size cover
        background-repeat no-repeat
        border-radius 20px
  .tabs
    display flex
    view
      flex 1
      text-align center
      margin 31px 0
      font-size 34px
      text
        color #000
        line-height 33px
        position relative
      text:after
        content ''
        display block
        position absolute
        bottom -10px
        width 70%
        left 50%
        transform translateX(-50%)
        height 6px
        border-radius 2px
        background-color #D2D2D2
    view.active
      text:after
        background-color #499FFF
  .model-cards-wrapper
    display flex
    flex-flow row wrap
    justify-items space-between
    justify-content space-between
    model-card
      margin-bottom 46px
