.page-cash
  .cash-wrapper
    position relative
    width 470px
    height 360px
    display flex
    justify-content center
    align-items center
    flex-direction column
    margin 50px auto 82px
    .bg
      position absolute
      width 100%
      height 100%
    .money
      color #4978FF
      font-size 78px
      line-height 1
      margin-bottom 21px
      margin-top 100px
    .helper-text
      font-size 26px
      line-height 22px
      color #636363
  .helper-text-wrapper
    color #474646
    font-size 28px
    line-height 44px
    display flex
    align-items center
    justify-content center
    image
      width 51px
      height 44px
      margin-right 14px
    view:last-child
      color #000
  .button
    background-color transparent
    border 1px solid #DDDDDD
    color #626262
    margin-top 23px
    width 543px
    margin 587px auto 113px
