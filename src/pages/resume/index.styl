$marginHorizontal = 24px
.resume
  position relative
  .swiper
    height 100vh
    view
      height 100%
      background-size 100% 100%
  .parallax-card
    height 483px
    border-radius 8px
    box-shadow 0px 0px 16px rgba(0,0,0,0.09)
    position absolute
    top 926px
    left $marginHorizontal
    right $marginHorizontal
    background-color #fff
    z-index 1
    .avatar
      width 183px
      height 183px
      border-radius 50%
      border 6px solid #fff
      background-size 100% 100%
      position absolute
      top -31px
      left 93px
    .info1
      margin 38px 40px 50px 301px
      .first
        display flex
        align-items flex-end
        margin-bottom 25px
        .name
          font-size 42px
          line-height 44px
          font-weight bold
          margin-right 19px
        .sex
          width 30px
          height 30px
          background-color #efefef
          margin-right 14px
        .id-wrapper
          display flex
          align-items center
          .id-verify-icon
            width 22px
            height 22px
            background-color #efefef
          .verify-text
            color #FFB848
            font-size 20px
      .second
        .btn-group
          color #fff
          font-size 26px
          border-radius 22px
          box-shadow 0px 0px 18px rgba(255,0,0,0.34)
          background-color #FF4545
          display flex
          align-items center
          width 249px
          .divider-vertical
            width 2px
            height 22px
            background rgba(255,255,255,1)
            opacity 0.5
          .btn
            line-height 44px
            flex 1
            justify-content center
            display flex
            align-items center
            .icon
              margin-right 6px
              background-color #efefef
            .add
              width 22px
              height 22px
            .email
              width 26px
              height 18px
    .divider-horizontal
      height 2px
      background rgba(238,238,238,1)
      margin 0 39px
    .info2
      margin-top 30px
      color #3E3E3E
      font-size 28px
      display flex
      align-items center
      justify-content center
      .divider-vertical
        width 2px
        height 40px
        background #E5E5E5
        margin 0 15px
        opacity 0.5
      .popularity,
      .subscribe
        display flex
        align-items center
        .icon
          background-color #e5e5e5
          margin-right 9px
        .heart
          width 29px
          height 25px
        .money-bag
          width 31px
          height 31px
    .info3
      margin 39px 55px 0 55px
      color #868686
      font-size 22px
      text-align center
    .tabs
      margin-top 44px
      view
        font-size 30px
        margin 0
        text
          line-height 1
  .container
    background rgba(255,255,255,1)
    border-radius 8px
    box-shadow 0px 0px 16px rgba(0,0,0,0.09)
    padding 32px 16px
    margin 276px $marginHorizontal $marginHorizontal $marginHorizontal
  .photos-wrapper
    display flex
    justify-content space-between
    justify-items space-between
    flex-flow row wrap
    .photo
      width 212px
      height 288px
      background-size 100% 100%
      margin-bottom 16px
