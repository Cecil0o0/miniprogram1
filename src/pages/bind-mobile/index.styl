.page-bind-mobile
  .banner-back
    position relative
    background-color #59A8FF
    display flex
    justify-content center
    align-items center
    height 340px
    .bg
      position absolute
      top 0
      bottom 0
      left 0
      right 0
      width 100%
      height 100%
      z-index 1
    view
      color #fff
      line-height 46px
      font-size 24px
  .inner
    position relative
    z-index 2
    display flex
    flex-direction column
    align-items center
    image
      width 42px
      height 42px
      margin-bottom 20px
  .suspension
    position relative
    z-index 3
    display flex
    align-items center
    padding 32px
    border-radius 4px
    box-shadow 0px 0px 18px rgba(91,169,255,0.4)
    position absolute
    top 275px
    width 690px
    left 50%
    transform translateX(-50%)
    background-color #fff
    image
      width 22px
      height 38px
      margin-right 25px
    input
      font-size 30px
      color #555
      line-height 44px
  .btns-wrapper
    margin-top 550px
    padding-bottom 226px
    .button
      width 543px
      margin 0 auto
    .submit
      background-color #4978FF
      color #fff
    .cancel
      background-color transparent
      border 1px solid #DDDDDD
      color #626262
      margin-top 23px
