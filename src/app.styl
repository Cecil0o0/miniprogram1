image
  width 50px
  height 50px
view
  box-sizing border-box
view.button
  width 100%
  height 86px
  line-height 86px
  border-radius 4px
  font-size 30px
  font-weight normal
  text-align center
.tabs
  display flex
  view
    flex 1
    text-align center
    margin 31px 0
    font-size 34px
    text
      color #000
      line-height 33px
      position relative
    text:after
      content ''
      display block
      position absolute
      bottom -10px
      width 70%
      left 50%
      transform translateX(-50%)
      height 6px
      border-radius 2px
      background-color #D2D2D2
  view.active
    text:after
      background-color #499FFF
